<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/style.css" rel="stylesheet">
  <title>HippiBank</title>
</head>

<body>
  <div class="flex flex-wrap justify-center space-x-3 space-y-3">
    <% for(const entry of entries) { %>
    <% if(entry.hypothek.rueckzahlungsStatus === 'offen') { %>
    <div class="flex justify-center">
      <button onclick="window.location='/edit/<%= entry.hypothek.id %>'" class="block p-6 rounded-lg shadow-lg bg-white max-w-sm">
        <div class="flex space-x-5">
          <h2 class="text-gray-900 text-xl leading-tight font-medium mb-2 text-left">
            <% if(entry.hypothek.rueckzahlungsDatum > new Date()){ __append("ðŸ’¸")} else {__append("ðŸš¨")} %> hypothek: <%= entry.hypothek.id %>
          </h2>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon>
          </svg>
        </div>
        <p class="text-gray-700 text-base mb-4 text-left">
          Zu bezahlen: <%= entry.hypothek.wert %><br>
          Bis: <%= entry.hypothek.rueckzahlungsDatum.getDate() + "." + entry.hypothek.rueckzahlungsDatum.getMonth() + "." + entry.hypothek.rueckzahlungsDatum.getFullYear() %><br>
          Risiko: <%= entry.hypothek.risikostufe %><br>
          Kunde: <%= entry.kunde.name %> <%= entry.kunde.vorname %>
        </p>
      </button>
    </div>
    <% } %>
    <% } %>
    <div class="flex justify-center">
      <button id="new" onclick="window.location='/new'" class="block p-6 rounded-lg shadow-lg bg-white max-w-sm content-center ">
        <svg xmlns="http://www.w3.org/2000/svg" width="61" height="61" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
      </button>
    </div>
  </div>
</body>

</html>